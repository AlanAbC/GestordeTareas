<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="#FFFFFF"
    android:padding="0dp"
    android:orientation="vertical"
    android:gravity="bottom">

    <TextView
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical"
        android:id="@+id/colorMat"
        android:textSize="50dp"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="2dp"
        android:textColor="#191919"
        android:id="@+id/tarea"
        android:paddingLeft="15dp"
        android:layout_toRightOf="@id/colorMat"
        android:text="NOMBRE TAREA"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#191919"
        android:layout_marginTop="3dp"
        android:id="@+id/materia"
        android:layout_below="@id/tarea"
        android:paddingLeft="25dp"
        android:layout_toRightOf="@id/colorMat"
        android:text="NOMBRE MATERIA" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/echo"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:id="@+id/echa"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tarea"
        android:scaleType="centerInside" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/borrar"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:id="@+id/borrar"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/echa"
        android:layout_marginLeft="5dp"
        android:scaleType="centerInside" />

</RelativeLayout>